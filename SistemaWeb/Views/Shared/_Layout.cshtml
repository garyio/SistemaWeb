<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Zunoro Shop</title>
    <!-- Sweet Alerts -->
    <link href="~/Content/sweetalert.css" rel="stylesheet" />
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.6 -->
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/AdminLTE.min.css">
    <!-- JQuery UI CSS -->
    <link href="~/Content/jquery-ui.min.css" rel="stylesheet" type="text/css" />
    <!-- Style para Bloquear Formulario e icono cargando de ajax -->
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" />

    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="~/dist/css/skins/_all-skins.min.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <!-- Logo -->
            <a href="~/Home/" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->                
                <span class="logo-mini"><b>Zn</b>&nbsp;<span class="glyphicon glyphicon-shopping-cart" style="color:white"></span></span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>Zunoro</b>&nbsp;<span class="glyphicon glyphicon-shopping-cart" style="color:white"></span></span>
            </a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <li>
                            @Html.Partial("_LoginPartial")
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- =============================================== END HEADER -->
        <!-- Left side column. contains the sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <span class="glyphicon glyphicon-user" aria-hidden="true" style="color:white"></span>
                    </div>
                    <div class="pull-left info">
                        <p>
                            @if (string.IsNullOrEmpty(User.Identity.Name))
                            { <span>Anonimo</span> }
                            else
                            { @User.Identity.Name }
                    </div>
                </div>
                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="sidebar-menu">
                    <li class="header">MENU</li>

                    <li class="treeview active">
                        <a href="#">

                            <i class="glyphicon glyphicon-cog" style="color:white"></i><span>MODULOS</span>

                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            
                            <li>
                                <span class="glyphicon glyphicon-tag" style="color:white"></span>                                
                                <span class="glyphicon-class">&nbsp;&nbsp;@Html.ActionLink("Inventario", "Index", "Articulos")</span>
                            </li>
                            

                        </ul>
                    </li>
                    <li class="treeview active">
                        <a href="#">
                            <i class="glyphicon glyphicon-th" style="color:white"></i><span>GENERAL</span>

                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li>
                                <span class="glyphicon glyphicon-home" style="color:white"></span>
                                <span>&nbsp;&nbsp;@Html.ActionLink("Inicio", "Index", "Home")</span>
                            </li>

                            <li>
                                <span class="glyphicon glyphicon-info-sign" style="color:white"></span>
                                <span>&nbsp;&nbsp;@Html.ActionLink("Acerca de", "About", "Home")</span>
                            </li>                            
                            <li>
                                <span class="glyphicon glyphicon-envelope" style="color:white"></span>
                                <span>&nbsp;&nbsp;@Html.ActionLink("Contacto", "Contact", "Home")</span>
                            </li>
                            

                        </ul>
                    </li>

                    
                    @if (User.IsInRole("Administrador"))
                    {
                        <li class="treeview active">
                            <a href="#">
                                 <i class="glyphicon glyphicon-fire" style="color:white"></i><span>ADMINISTRADOR</span>

                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                <li>
                                    <span class="glyphicon glyphicon-minus" style="color:white"></span>
                                    <span>&nbsp;&nbsp;@Html.ActionLink("Usuarios", "Index", "Users")</span>
                                </li>
                                <li>
                                    <span class="glyphicon glyphicon-minus" style="color:white"></span>
                                    <span>&nbsp;&nbsp;@Html.ActionLink("Roles", "Index", "Role")</span>
                                </li>          
                                <li>
                                    <span class="glyphicon glyphicon-minus" style="color:white"></span>
                                    <span>&nbsp;&nbsp;@Html.ActionLink("Categorias", "Index", "Categorias")</span>
                                </li>      
                                <li>
                                    <span class="glyphicon glyphicon-minus" style="color:white"></span>
                                    <span>&nbsp;&nbsp;@Html.ActionLink("Subcategorias", "Index", "Subcategorias")</span>
                                </li>  
                                <li>
                                    <span class="glyphicon glyphicon-minus" style="color:white"></span>
                                    <span>&nbsp;&nbsp;@Html.ActionLink("Unidad Medidas", "Index", "UnidadMedida")</span>
                                </li>   
                                <li>
                                    <span class="glyphicon glyphicon-minus" style="color:white"></span>
                                    <span>&nbsp;&nbsp;@Html.ActionLink("Proveedores", "Index", "Proveedor")</span>
                                </li>                                        

                            </ul>
                        </li>
                    }

                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>

        <!-- =============================================== -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            @*<section class="content-header">
                <h1>
                    @ViewBag.Title
                </h1>

            </section>*@
            <!-- Main content -->
            <section class="content">
                <!-- Default box -->
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">@ViewBag.Title</h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                                <i class="fa fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="box-body">
                        @RenderBody()
                    </div>
                </div>
                <!-- /.box -->
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <div class="control-sidebar-bg"></div>

        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 1.0
            </div>
            <strong>Copyright &copy; @DateTime.Now.Year - Zunoro.</strong> All rights
            reserved.
        </footer>
    </div>
    <!-- /.wrapper -->
    <!-- ./wrapper -->
    <!-- jQuery 2.2.3 -->
    <script src="~/plugins/jQuery/jquery-2.2.3.min.js"></script>
    <script src="~/plugins/jQueryUI/jquery-ui.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    @*<script src="~/Scripts/jquery.form.js"></script>*@
    <!-- Bootstrap 3.3.6 -->
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
    @*<script src="~/bootstrap/js/bootstrap.js"></script>*@
    <!-- SlimScroll -->
    <script src="~/plugins/slimScroll/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="~/plugins/fastclick/fastclick.js"></script>
    <!-- AdminLTE App -->
    <script src="~/dist/js/app.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/dist/js/demo.js"></script>
    <!-- Sweet Alerts JS-->
    <script src="~/Scripts/sweetalert-dev.js"></script>

    @Scripts.Render("~/bundles/jqueryval")

    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)*@

    @RenderSection("scripts", required: false)
</body>
</html>
